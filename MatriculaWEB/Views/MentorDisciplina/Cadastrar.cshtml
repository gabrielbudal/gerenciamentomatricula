@model MentorDisciplina
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
</head>
<body>
    <form asp-action="Cadastrar" asp-controller="MentorDisciplina" method="post"
          enctype="multipart/form-data">
        <fieldset>
            <legend>Cadastrar Relacionamento entre mentor e disciplina</legend>


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MentorId">Mentor:</label>
                <select class="form-control" asp-items="@ViewBag.Mentores"
                        asp-for="MentorId">
                    <option> -- SELECIONE -- </option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DisciplinaId">Disciplina:</label>
                <select class="form-control" asp-items="@ViewBag.Disciplinas"
                        asp-for="DisciplinaId">
                    <option> -- SELECIONE -- </option>
                </select>
            </div>

            <input class="btn btn-info" type="submit" value="Cadastrar" />
        </fieldset>
    </form>

</body>
</html>
