@model List<AdministracaoHorario>
<!DOCTYPE html>

<html>
<head>
    <title>Administração de Horário</title>
</head>
<body>
    <h2>Administração de Horário</h2>
    <a asp-action="Cadastrar" asp-controller="AdministracaoHorario"
       class="btn btn-primary espacamento-baixo">Cadastrar</a>
    <table class="table table-hover table-striped espacamento-baixo">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hora Inicio</th>
                <th>Hora Fim</th>
                <th>Total de aulas</th>
                <th>Criado em</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (AdministracaoHorario administracaohorarioCadastrado in Model)
            {
            <tr>
                <td>@administracaohorarioCadastrado.Id</td>
                <td>@administracaohorarioCadastrado.HoraInicio</td>
                <td>@administracaohorarioCadastrado.HoraFim</td>
                <td>@administracaohorarioCadastrado.TotalAulas</td>
                <td>@administracaohorarioCadastrado.CriadoEm.ToString(@*"dd/MM/yyyy hh:mm:ss"*@)</td>
                <td>
                    <a asp-action="Remover"
                       asp-controller="AdministracaoHorario"
                       asp-route-id="@administracaohorarioCadastrado.Id"
                       class="btn btn-danger">Remover</a>
                </td>
                <td>
                    <a asp-action="Alterar"
                       asp-controller="AdministracaoHorario"
                       asp-route-id="@administracaohorarioCadastrado.Id"
                       class="btn btn-warning">Alterar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <span><b>Quantidade de registros: </b> @Model.Count </span><br />
    <span><b>Dados atualizados: </b> @DateTime.Now </span>

</body>
</html>