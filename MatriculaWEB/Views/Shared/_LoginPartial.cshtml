@using Microsoft.AspNetCore.Identity
@using MatriculaWEB.Models

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Usuario" asp-action="Logout" method="post" id="logoutForm" class="navbar-nav ml-auto">
        <ul class="navbar-nav ml-auto">
            <li>
                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Login de CPF: @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a class="nav-link" asp-action="Logout" asp-controller="Usuario">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
<ul class="navbar-nav ml-auto">
    <li><a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Create">Registre-se</a></li>
    <li>
        <a class="nav-link" asp-action="Login" asp-controller="Usuario">Login</a>
    </li>
</ul>
}